@{
    ViewBag.Title = "IT HelpDesk ChatBot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="chat-container" role="main" aria-labelledby="chatbot-title">
    <h1 id="chatbot-title">IT HelpDesk ChatBot</h1>

    <section class="chat-box" id="chat-window" aria-live="polite" aria-atomic="true">
        <p><strong>Bot:</strong> Please select an issue from the dropdown to get started.</p>
    </section>

    <section aria-labelledby="issue-label">
        <label for="issue-select" id="issue-label" class="visually-hidden">Select an issue</label>
        <select id="issue-select" aria-label="Select an IT issue">
            <option value="">--Select an issue--</option>
            <option value="Wifi not working">Wi-Fi not working</option>
            <option value="Printing services">Printing services</option>
            <option value="VPN Services">VPN Services</option>
            <option value="equipmentBooking">Equipment Booking Support</option>
        </select>
        <button id="start-button" aria-label="Start troubleshooting">Start</button>
    </section>

    <section id="os-options" class="hidden" aria-label="Operating system help links">
        <div class="os-buttons">
            <button onclick="window.open('https://www.lakeheadu.ca/faculty-and-staff/departments/services/helpdesk/phones/networking/wireless/android_wireless', '_blank')">Android Wireless</button>
            <button onclick="window.open('https://www.lakeheadu.ca/faculty-and-staff/departments/services/helpdesk/phones/networking/wireless/apple_ios_wireless', '_blank')">Apple iOS Wireless</button>
            <button onclick="window.open('https://www.lakeheadu.ca/faculty-and-staff/departments/services/helpdesk/phones/networking/wireless/mac-os-wireless', '_blank')">Mac OSX Wireless</button>
            <button onclick="window.open('https://www.lakeheadu.ca/faculty-and-staff/departments/services/helpdesk/phones/networking/wireless/eduroam', '_blank')">Eduroam - For Visitors</button>
            <button onclick="window.open('https://www.lakeheadu.ca/faculty-and-staff/departments/services/helpdesk/phones/networking/wireless/intel_proset_configuration', '_blank')">Intel Proset Configuration</button>
            <button onclick="window.open('https://www.lakeheadu.ca/faculty-and-staff/departments/services/helpdesk/phones/networking/wireless/ubuntu_wireless', '_blank')">Ubuntu Wireless</button>
            <button onclick="window.open('https://www.lakeheadu.ca/faculty-and-staff/departments/services/helpdesk/phones/networking/wireless/windows-10-wireless', '_blank')">Windows 10 Wireless</button>
            <button onclick="window.open('https://www.lakeheadu.ca/faculty-and-staff/departments/services/helpdesk/phones/networking/wireless/windows-11-wireless', '_blank')">Windows 11 Wireless</button>
        </div>

        <div id="final-help" class="hidden final-help" aria-live="polite">
            <p>If you're still unable to connect, please choose one of the options below for further assistance:</p>
            <div class="help-options">
                <button id="visit-btn">Visit Room LI 1015</button>
                <button id="ticket-btn">Create a Ticket</button>
            </div>
        </div>



    </section>


    <section id="vpn-options" class="hidden" aria-label="VPN Client Downloads">
        <h2>Download FortiClient VPN</h2>
        <div class="vpn-buttons">
            <button onclick="window.open('https://links.fortinet.com/forticlient/win/vpnagent', '_blank')">
                <img src="~/images/windows-logo.png" alt="Windows logo" />
                Windows
            </button>
            <button onclick="window.open('https://links.fortinet.com/forticlient/mac/vpnagent', '_blank')">
                <img src="~/images/macos-logo.png" alt="macOS logo" />
                macOS
            </button>
            <button onclick="window.open('https://play.google.com/store/apps/details?id=com.fortinet.forticlient_vpn', '_blank')">
                <img src="~/images/android-logo.png" alt="Android logo" />
                Android
            </button>
            <button onclick="window.open('https://apps.apple.com/us/app/forticlient-vpn/id1475674905', '_blank')">
                <img src="~/images/ios-logo.png" alt="iOS logo" />
                iOS
            </button>
            <button onclick="window.open('https://links.fortinet.com/forticlient/rhel/vpnagent', '_blank')">
                <img src="~/images/linux-rpm-logo.png" alt="Linux RPM logo" />
                Linux (.rpm)
            </button>
            <button onclick="window.open('https://links.fortinet.com/forticlient/deb/vpnagent', '_blank')">
                <img src="~/images/linux-deb-logo.png" alt="Linux DEB logo" />
                Linux (.deb)
            </button>
        </div>
    </section>


    <section>
        <button id="next-button" aria-label="Go to next troubleshooting step">Next Step</button>
    </section>
</main>

@section Scripts {
    <script src="~/js/script.js"></script>
}
